<% content_for(:title, @event.name) %>
<div class="container">
  <div class="row">
    <div class="col-md-10 offset-md-1 col-lg-8 offset-lg-2">
      <h1><%= t '.title' %></h1>
      <%= form_with model: [:admin, @event], local: true do |f| %>
        <%= render 'shared/error_messages', object: f.object %>
        <div class="form-group">
          <%= f.label :game_application_id %>
          <%= f.select :game_application_id, GameApplication.pluck(:name, :id), {}, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :name %>
          <%= f.text_field :name, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :event_type %>
          <%= f.select :event_type, Event.event_types_i18n.invert, {}, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :description %>
          <%= f.text_area :description, class: 'form-control', rows: 10 %>
        </div>
        <div class="form-inline.text-left">
          <div class="form-group">
            <%= f.label :started_at, class: 'control-label' %>
            <%= f.datetime_field :started_at, class: 'form-control'%>
          </div>
        </div>
        <div class="form-inline.text-left">
          <div class="form-group">
            <%= f.label :ended_at,class: 'control-label' %>
            <%= f.datetime_field :ended_at, class: 'form-control'%>
          </div>
        </div>
        <%= f.submit class: 'btn btn-primary' %>
      <% end %>
    </div>
  </div>
</div>
