<% content_for(:title, @game_genre.name) %>
<div class="container">
  <div class="row">
    <div class="col-md-10 offset-md-1 col-lg-8 offset-lg-2">
      <h1><%= t('.title') %></h1>
      <div class="text-right mb-3">
        <%= link_to t('defaults.edit'), edit_admin_game_genre_path(@game_genre), class: 'btn btn-success' %>
        <%= link_to t('defaults.delete'), admin_game_genre_path(@game_genre), method: :delete, data: { confirm: t('defaults.message.delete_confirm') }, class: 'btn btn-danger' %>
      </div>
      <table class="table table-bordered bg-white">
        <tr>
          <th scope="row"><%= GameGenre.human_attribute_name(:id) %></th>
          <td><%= @game_genre.id %></td>
        </tr>
        <tr>
          <th scope="row"><%= GameGenre.human_attribute_name(:name) %></th>
          <td><%= @game_genre.name %></td>
        </tr>
        <tr>
          <th scope="row"><%= GameGenre.human_attribute_name(:created_at) %></th>
          <td><%= l @game_genre.created_at, format: :long %></td>
        </tr>
        <tr>
          <th scope="row"><%= GameGenre.human_attribute_name(:updated_at) %></th>
          <td><%= l @game_genre.updated_at, format: :long %></td>
        </tr>
      </table>
    </div>
  </div>
</div>
