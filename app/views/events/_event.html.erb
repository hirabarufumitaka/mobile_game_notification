
<%= link_to event_path(event) do %>
  <div class="event-card border rounded-lg my-2 shadow-lg bg-white w-full lg:max-w-full lg:flex">
    <div class="h-48 lg:h-40 lg:w-40 flex-none bg-cover rounded-lg lg:rounded-l overflow-hidden">
        <%= image_tag event.game_application.game_application_image.url, class: 'object-cover h-full w-full' %>
    </div>
    <div class="p-4 flex flex-col justify-between leading-normal">
      <div class="mb-8">
        <p class="text-sm text-gray-600 flex items-center">
          <%= event.game_application&.name %>
        </p>
        <div class="text-gray-900 font-bold text-xl mb-2">
          <%= event.name %>
        </div>
        <p class="text-gray-700 text-base">
          <%= l event.started_at, format: :long %> ~
          <%= l event.ended_at, format: :long %>
        </p>
      </div>
    </div>
  </div>
<% end %>
