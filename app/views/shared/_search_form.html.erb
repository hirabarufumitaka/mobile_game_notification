<%= search_form_for @q, class: 'flex justify-center mb-10' do |f| %>
  <div class="flex flex-wrap -mx-3 mb-2">
    <div class="w-auto px-3 mb-6 md:mb-0">
      <%= f.select :game_application_id_eq, GameApplication.pluck(:name, :id), {include_blank: 'アプリ名'}, class: 'px-10 py-2 border rounded-lg' %>
    </div>
    <div class="w-auto px-3 mb-6 md:mb-0">
      <%= f.select :event_type_eq, {"ガチャ": 0, "コラボ": 1, "その他": 2}, {include_blank: 'イベント種類'}, class: 'px-10 py-2 border rounded-lg' %>
    </div>
    <div class="w-auto px-3 mb-6 md:mb-0">
      <%= f.search_field :name_or_description_cont, class: 'px-10 py-2 border rounded-lg', placeholder: 'イベント名・内容' %>
    </div>
    <div class="w-auto px-3 mb-6 md:mb-0">
      <%= f.date_field :started_at_gteq, class: 'px-10 py-2 border rounded-lg' %> 〜
      <%= f.date_field :ended_at_lteq_end_of_day, class: 'px-10 py-2 border rounded-lg' %>
    </div>
    <div class="w-auto px-3 mb-6 md:mb-0">
      <%= f.submit  '検索する',class: 'text-white bg-blue-500 hover:bg-blue-800 focus:ring-4 focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center mr-2 mb-2' %>
    </div>
  </div>
<% end %>
